<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:KanjiApp"
             x:Class="KanjiApp.App">
    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme Mode="Light" />
        <StyleInclude Source="avares://KanjiApp/Styles/Colors.axaml" />
        <StyleInclude Source="avares://KanjiApp/Styles/TextStyles.axaml" />
        <StyleInclude Source="avares://KanjiApp/Styles/ButtonStyles.axaml" />
        <StyleInclude Source="avares://KanjiApp/Styles/BorderStyles.axaml" />
    </Application.Styles>
</Application>