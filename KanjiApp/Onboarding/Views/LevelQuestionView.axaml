<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:KanjiApp.Onboarding.ViewModels"
             mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="400"
             x:Class="KanjiApp.Onboarding.Views.LevelQuestionView">

    <Design.DataContext>
        <vm:LevelQuestionViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="Auto,Auto,Auto">

        <TextBlock Grid.Row="0">Do you know your JLPT level?</TextBlock>

        <StackPanel Grid.Row="1"
                    Orientation="Horizontal">

            <Button
                Command="{Binding GoToWhatIsYourLevel}"
                Classes="Capsule BlueButton">
                Yes
            </Button>
            <Button
                Command="{Binding GoToHowManyYears}"
                Classes="Capsule BlueButton">
                No
            </Button>

        </StackPanel>

        <Button Grid.Row="2"
                Command="{Binding GoToImNew}"
                Classes="Capsule PinkButton">
            I’m new to Japanese
        </Button>

    </Grid>

</UserControl>